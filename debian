# Force Strong Passwords
sudo sed -i -e 's/difok=3\+/difok=3 dcredit=-1 ucredit=-1 lcredit=-1 ocredit=-1/' /etc/pam.d/common-password
sudo sed -i -e 's/sha512\+/sha512 remember=5 minlen=8/' /etc/pam.d/common-password
